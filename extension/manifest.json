{
    "manifest_version": 2,
    "name": "MassCheck",
    "description": "Fact-checking tool",
    "version": "1.0",
    "icons": {"128": "icon_128.png"},

    "content_scripts": [
        {
            "matches": ["https://twitter.com/*"],
            "js": ["contentScript.js"]
        }
    ],

    "background": {
        "js":["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup":"popup.html"
    },
    "permissions":[
        "tabs"
    ]
}